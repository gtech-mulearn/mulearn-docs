#!/bin/sh

echo "ğŸ” Running pre-commit checks..."

# Enforce bun as package manager
if [ -f "package-lock.json" ] || [ -f "yarn.lock" ] || [ -f "pnpm-lock.yaml" ]; then
  echo "âŒ ERROR: Wrong package manager detected!"
  echo "This project uses bun. Please remove package-lock.json, yarn.lock, or pnpm-lock.yaml"
  echo "and use 'bun install' instead."
  exit 1
fi

# Run lint-staged for staged files
bunx lint-staged

# If lint-staged fails, abort commit
if [ $? -ne 0 ]; then
  echo "âŒ Lint-staged failed. Please fix the errors above."
  exit 1
fi

echo "âœ… Pre-commit checks passed!"